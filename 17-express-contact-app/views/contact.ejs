
    <h1 class="mt-3">Ini Halaman Contact!</h1>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
            <% if (contacts.length === 0) { %>
                <tr>
                   <td colspan="4">
                       <div class="alert alert-danger fw-bold" role="alert">
                           Data kontak tidak ada 
                         </div>
                   </td> 
                </tr>
            <% } %>
            <% contacts.forEach((contact,i) => { i++ %>
                <tr>
                  <th scope="row"><%= i++ %></th>
                  <td><%= contact.nama %></td>
                  <td><%= contact.no %></td>
                  <td>
                      <a href="/contact/<%=contact.nama%>" class="btn badge rounded-pill btn-success"><i class="bi bi-info-circle"></i> Detail</a>
                  </td>
                </tr>
            <% }) %>
        </tbody>
      </table>
