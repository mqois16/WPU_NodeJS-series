<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2 class="mt-3">Ini Halaman Contact!</h2>

      <a href="/contact/add" class="btn btn-primary mb-2">Tambah Data Kontak</a>

      <% if (msg.length !== 0) { %>
        <div class="alert alert-success" role="alert">
          <%= msg %>
        </div>
      <% } %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomor</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">
                Data kontak tidak ada
              </div>
            </td>
          </tr>
          <% } %> 
          <% contacts.forEach((contact,i) => { i++ %>
          <tr>
            <th scope="row"><%= i++ %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.no %></td>
            <td>
              <a
                href="/contact/<%= contact.nama%>"
                class="btn badge rounded-pill btn-success"
                ><i class="bi bi-info-circle"></i> Detail</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
